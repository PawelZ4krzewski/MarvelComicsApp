<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llComicItem"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16.dp"
        android:layout_marginVertical="8.dp"
        android:background="@drawable/shadow_comic_item"
        >
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            app:cardCornerRadius="10dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="2dp">

            <ImageView
                android:id="@+id/ivComicsCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:scaleType="centerCrop"
                android:contentDescription="@string/comics_book_covers" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginVertical="25dp"
            android:layout_marginHorizontal="20dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                >

                <ImageButton
                    android:id="@+id/ibtUnlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/favourite"
                    android:background="@color/transparent"
                    android:contentDescription="@string/Favourite" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/tvComicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAuthors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/authors"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/lightgray100"
                android:layout_marginBottom="10dp"
                android:maxLines="2"
                />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:maxLines="3"
                android:ellipsize="end"
                />
        </LinearLayout>
    </LinearLayout>
</layout>